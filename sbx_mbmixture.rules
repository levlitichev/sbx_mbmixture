rule get_readcounts:
    input:
        str(QC_FP/'mbmixture'/'{host}'/'sorted'/'{sample}.bam')
    output:
        str(QC_FP/'mbmixture'/'{host}'/'readcounts'/'{sample}'/'chr{chr}.csv.gz')
    params:
        chr="{chr}"
    resources:
        mem_mb=16384 #16GB
    envmodules:
        "R/4.0.2"
    script:
        "scripts/get_readcounts_one_chr.R"

