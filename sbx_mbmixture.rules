from pathlib import Path

CHROMOSOMES=[i for i in range(1,20)]
IMP_SNP_DIR=Path(Cfg['sbx_mbmixture']['imp_snp_fp'])
# N.B. Can use a forward slash (`/`) in paths because QC_FP and IMP_SNP_FP are pathlib.Path objects
 
